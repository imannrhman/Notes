<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="26dp"
    tools:context=".UbahNote">
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_judul"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"><EditText
        android:hint="Judul"
        android:id="@+id/edt_judul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_deskripsi"
        android:layout_below="@+id/ti_judul"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
        android:hint="Deskripsi"
        android:id="@+id/edt_deskripsi"
        android:layout_below="@id/edt_judul"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_marginVertical="16dp"
        android:id="@+id/btn_aksi"
        android:text="UPDATE"
        android:textColor="#fff"
        android:background="@color/colorAccent"
        android:textStyle="bold"
        android:layout_below="@id/ti_deskripsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>